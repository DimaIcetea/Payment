<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane prefHeight="400.0" prefWidth="775.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.payment.MainPage">
   <children>
       <TableView fx:id="table_list" prefHeight="211.0" prefWidth="775.0">
           <columns>
               <TableColumn text="Назва" fx:id="columnName" prefWidth="120" >
                   <cellValueFactory>
                       <PropertyValueFactory property="name"/>
                   </cellValueFactory>
               </TableColumn>
               <TableColumn text="Тариф" fx:id="columnTariff" prefWidth="100">
                   <cellValueFactory>
                       <PropertyValueFactory property="tariff"/>
                   </cellValueFactory>
               </TableColumn>
               <TableColumn text="Попередній" fx:id="columnPrev" prefWidth="100">
                   <cellValueFactory>
                       <PropertyValueFactory property="prev"/>
                   </cellValueFactory>
               </TableColumn>
               <TableColumn text="Поточний" fx:id="columnCurr" prefWidth="100">
                   <cellValueFactory>
                       <PropertyValueFactory property="curr"/>
                   </cellValueFactory>
               </TableColumn>
               <TableColumn text="Лічильник" fx:id="columnCount" prefWidth="100">
                   <cellValueFactory>
                       <PropertyValueFactory property="count"/>
                   </cellValueFactory>
               </TableColumn>
               <TableColumn text="Різниця" fx:id="columnMinus" prefWidth="100">
                   <cellValueFactory>
                       <PropertyValueFactory property="difference"/>
                   </cellValueFactory>
               </TableColumn>
               <TableColumn text="До сплати" fx:id="columnPay" prefWidth="100">
                   <cellValueFactory>
                       <PropertyValueFactory property="pay"/>
                   </cellValueFactory>
               </TableColumn>
           </columns>
       </TableView>

       <Label layoutX="34.0" layoutY="274.0" prefHeight="17.0" prefWidth="157.0" text="Додати квитанцію" />
      <Label layoutX="207.0" layoutY="274.0" prefHeight="17.0" prefWidth="135.0" text="Редагувати квитанцію" />
      <Label layoutX="374.0" layoutY="274.0" prefHeight="17.0" prefWidth="113.0" text="Видалити квитанцію" />
      <Button fx:id="btn_add" layoutX="34.0" layoutY="315.0" mnemonicParsing="false" onAction="#add_click" prefHeight="25.0" prefWidth="113.0" text="Додати" />
      <Button fx:id="btn_edit" layoutX="207.0" layoutY="315.0" mnemonicParsing="false" onAction="#editHandler" prefHeight="25.0" prefWidth="125.0" text="Редагувати" />
      <Button fx:id="btn_delete" layoutX="373.0" layoutY="315.0" mnemonicParsing="false" onAction="#deleteHandler" prefHeight="25.0" prefWidth="119.0" text="Видалити" />
   </children>
</AnchorPane>
